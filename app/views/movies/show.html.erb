<h1><%=@movie.title%></h1>
<%= link_to "Add A Review", new_movie_review_path(@movie) %>
<%= link_to 'Edit This Movie', edit_movie_path(@movie)%>
<%= link_to 'Delete This Movie', movie_path(@movie), :data => {
  :confirm => "Are you sure?",
  :method => 'delete'} %>
<p><%= link_to "Return to list of Movies", movies_path %></p>

<hr>

<h1>Average Rating: <%= @movie.average %></h1>

<% if @movie.reviews.any? %>
  <h4>Here are the reviews for this movie:</h4>

    <% @movie.reviews.each do |review|%>
      <h3><%=review.title%></h3>
      <p><%=review.description%></p>
      <p><%=review.author%></p>
      <p>Rating: <%=review.rating%></p>

      <%= link_to "Edit", edit_movie_review_path(@movie, review) %> |
        <%= link_to "Delete", movie_review_path(@movie, review),
                                 :data => {:confirm => "Are you sure?",
                                                :method => "delete"} %>

      <hr>
    <%end%>

  <% else %>
  <p>There are no reviews yet!</p>
<% end %>
